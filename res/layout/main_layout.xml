<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <GridLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:columnCount="4"
    android:horizontalSpacing="0dp" 
	android:verticalSpacing="0dp">

            <Button
                android:id="@+id/normal_button"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Revert" />

            <Button
                android:id="@+id/gray_button"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Gray" />

            <Button
                android:id="@+id/edge_button"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Edges" />
            
            <Button
                android:id="@+id/predict_button"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Predict" />
            
            <Button
                android:id="@+id/camera_button"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Take Photo" />

            <Button
                android:id="@+id/parallel_gray_button"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Parallel Gray" />

            <Button
                android:id="@+id/parallel_edge_button"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Parallel Edges" />
            
            <Button
                android:id="@+id/parallel_predict_button"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Parallel Predict" />
            

    </GridLayout>

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/campanile" />

</LinearLayout>